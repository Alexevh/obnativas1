<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/fondo" android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:padding="30dip"
    android:orientation="horizontal" >
    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:layout_gravity="center">
        <TextView android:text="Menu principal"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:layout_gravity="center" android:layout_marginBottom="25dip"
            android:textSize="24.5sp" />
        <Button android:id="@+id/btnRegistro" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Registro" />
        <Button android:id="@+id/btnPeliculas" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Peliculas" />
        <Button android:id="@+id/btnCategorias" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Categoria" />
        <Button android:id="@+id/btnRanking" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Ranking" />
        <Button android:id="@+id/btnAcercade" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Acerca de" />
        <Button android:id="@+id/btnSalir" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Salir" />
    </LinearLayout>
</LinearLayout>